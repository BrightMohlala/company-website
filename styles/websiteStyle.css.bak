.header-image {
    width: 100%;
    height: 500px; 
	position: relative;
    overflow: hidden; 
}

.header-image img {
    width: 100%; 
    height: 100%;
	object-fit: fill; 
    position: absolute;
    top: 0; 
    left: 0; 
}

title{
	display: none;
}

nav p {
    background-color: #0095da;
    text-align: center;
    margin: 0;
    padding: 10px;
}

nav a {
    color: #ffffff;
    text-decoration: none;
    font-weight: bold;
    padding: 5px 15px;
}

nav a:hover{
    color: #ffa500;
}

nav a.current {
    color: #ffa500;
    background-color: #ffffff;
    border-radius: 5px;
    }
	
body {
    font-family: Arial, Helvetica, sans-serif;
	background-color: #fff;
	width: 800px;
    margin: 10px auto;
    border: 2px solid #333333;
    box-shadow: 0 10px 20px 10px #0095da;
    background-image: url("../images/A detailed cross-sectional view of refrigeration and air conditioning systems.jpg");
	background-repeat: repeat-y;
	background-repeat: repeat-x;
	background-repeat: repeat;
}

main {
    padding: 20px;
    background-color: white;
}

.certificate img {
    width: 40px; 
    height: 15px;
}

table{
		width: 100%;
		border-collapse: collapse;
		margin: 20px 0;
}

table, th, td{
		border: 1px solid black;
}

thead th{
		background-color: #0095da;
		color: white;
}

caption{
		font-weight: bold;
		margin-bottom: 10px;
		text-align: center;
}

.cta-button{
		background-color: #0095da;
		color: white;
		padding: 5px 10px;
		text-decoration: none;
		border-radius: 5px;
}

.cta-button:hover{
		background-color: #007bb5;
}

footer {
    background-color: #0095da;
    color: black;
    font-size: 1rem;
    padding: 15px; 
}

footer div a:link{
		text-decoration: none;
}

footer div a:hover{
		text-decoration: underline;
}

.icons {
    list-style: none;
    display: flex;
    gap: 10px; 
    padding: 0;
	display: inline-block;
}

.icons a {
    text-decoration: none;
}

.icons img {
    width: 30px; 
    height: 30px;
}

div.nav-links{
		position: relative;
		right: 60px;
		bottom: -30px;
}

div.contact-info{
		position: relative;
		right: 60px;
		top: 30px;
}

.project3-images img a.link{
		bottom: 10px;
	}

footer h4{
		position: relative;
		bottom: 65px;
		left: 20px;
}

#footer-info {
    text-align: center;
    margin: 0 auto;
}

hr {
    width: auto;
    border: 1px line white;
    margin-top: 20px; 
    position: relative;
}

.back-button {
    display: inline-block;
    background-color: #0095da; 
    color: white; 
    padding: 10px 20px; 
    text-align: center;
    text-decoration: none; 
    font-size: 16px; 
    border-radius: 5px; 
    margin-top: 20px; 
}

.back-button:hover {
    background-color: #007bb5; 
}

.thankyou-image img {
    width: 100%; 
    height: 750px;
}

@media print {
    body {
        font-size: 12pt; 
        color: black; 
        background: none; 
        margin: 0;
        padding: 0;
		font-family: Verdana, Arial, Helvetica, sans-serif;
    }
	
	h1,h2,h4{
		font-weight: bold;
	}
